<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="list"
            type="android.databinding.ObservableList" />
        <variable
            name="viewTypeHandler"
            type="com.mohang.genericadapter.ViewTypeHandler"/>
        <variable
            name="recyclerConfig"
            type="com.mohang.genericadapter.RecyclerConfiguration"/>
        <variable
            name="viewListener"
            type="com.mohang.genericadapter.ViewListener"/>
        <variable
            name="actionHandler"
            type="com.example.mohang.genericadapterexample.ui.ActionHandlerFragment"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:recyclerConfiguration="@{recyclerConfig}"
            app:viewTypeHandler="@{viewTypeHandler}"
            app:actionHandler="@{actionHandler}"
            app:listItem="@{list}" />

    </LinearLayout>

</layout>